{
  "name": "Transact",
  "version": "1.0.0",
  "description": "Transact API, restful api, to power Transact API frontend",
  "main": "index.js",
  "engines": {
    "node": "12.16.1",
    "npm": "6.13.4"
  },
  "scripts": {
    "start": "nodemon ./dist/index.js",
    "start:dev": "nodemon ./src/index.js --ext js,json,yaml --exec babel-node",
    "lint": "eslint ./**/*.js",
    "lint-md": "remark . --output",
    "test": "nyc mocha --timeout 600000 ./src/tests/index.js --exit",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "build": "babel ./src --out-dir ./dist --compact --ignore test --minified --no-comments --copy-files"
  },
  "author": "samuel@ymakittos.com",
  "license": "LICENSE",
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.5",
    "remark-preset-lint-recommended": "^3.0.3",
    "sinon": "^7.3.2",
    "sinon-chai": "3.5.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.23.3",
    "hpp": "0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node-toobusy": "^0.6.3",
    "nodemon": "^1.19.4",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "winston": "^3.3.3"
  }
}
